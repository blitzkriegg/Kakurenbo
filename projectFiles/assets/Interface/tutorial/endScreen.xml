<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="end" controller="tutorial.MyStartScreen">
        <layer id="background" childLayout="center">
            <image filename="Interface/tutorial/start-background.jpg">
            </image>
        </layer>
        <layer id="foreground" childLayout="vertical">
            <panel id="panel_top" height="65%" width="75%" align="center" childLayout="horizontal"> 
            </panel>
            <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="horizontal">  
                <panel id="panel_bottom_right" height="50%" width="100%" align="center" childLayout="center">  
                    <control name="button" label="Quit" id="QuitButton" height="50%" width="25%" align="center" valign="center" visibleToMouse="true" > 
                        <interact onClick="quitGame()"/>
                    </control>
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
